@model IEnumerable<Test.Entity.Encuentro>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListarEncuentros</title>
</head>
<body>
    @*<p>
            @Html.ActionLink("Crear nuevo", "InsertarEncuentro")
