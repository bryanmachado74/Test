    <p>
        @Html.ActionLink("Ver mis apuestas", "../Apuesta/ListarApuesta")
    </p>
    <table class="table">
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.id)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.local)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.visitante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
