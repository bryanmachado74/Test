@model IEnumerable<Test.Entity.Apuesta>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListarApuesta</title>
</head>
<body>
    <p>
        @Html.ActionLink("Hacer una apuesta", "../Encuentro/ListarEncuentros")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.cliente)
        </th>*@
            <th>
                @Html.DisplayNameFor(model => model.encuentro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.eleccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ganancia)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.cliente)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.encuentro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.eleccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.monto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ganancia)
        </td>
        <td>
            @*@Html.ActionLink("Editar", "ActualizarApuesta", new { id=item.id }) |*@
            @Html.ActionLink("Ver apuesta", "ObtenerApuesta", new { id = item.id }) |
            @Html.ActionLink("Eliminar", "BorrarApuesta", new { id = item.id })
        </td>
    </tr>
    }
    
    </table>
</body>
</html>
